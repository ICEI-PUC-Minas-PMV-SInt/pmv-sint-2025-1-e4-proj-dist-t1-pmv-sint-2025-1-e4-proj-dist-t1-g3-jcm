@model jacomiWeb.Pages.LoginModel

<h2>Login</h2>

<!--    <form onsubmit="event.preventDefault(); authenticate();"> -->
    <form id="login-form">
        <label for="login-id">ID:</label>
        <input type="number" id="login-id" required>

        <label for="login-password">Senha:</label>
        <input type="password" id="login-password" required>

        <button type="submit">Entrar</button>
    </form>


<script>
    const apiUrl = "http://localhost:44315"; // URL correta da API

    document.getElementById("login-form").addEventListener("submit", (e) => {
        e.preventDefault(); // Evita recarregar a página
        authenticate();
    });

    async function authenticate() {
        const id = document.getElementById("login-id").value;
        const password = document.getElementById("login-password").value;

        const response = await fetch(`${apiUrl}/api/Usuarios/authenticate`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ id, password })
        });

        if (!response.ok) {
            alert("Erro ao autenticar! Verifique seu login.");
            return;
        }

        const data = await response.json();
        sessionStorage.setItem("JwtToken", data.jwtToken); // Salva o token na sessão
        alert("Autenticação bem-sucedida!");
        window.location.href = "/Usuarios"; // Redireciona para a página de usuários
    }
</script>



